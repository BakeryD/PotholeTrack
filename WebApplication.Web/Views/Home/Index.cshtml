    </div>
</div>

<div class="modal fade" id="potholedata" tabindex="-1" role="dialog" aria-labelledby="Data!" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Pothole Data">Pothole Data!</h5>
            </div>
            <div class="modal-body">
                <div style="text-align: center; padding-bottom: 40px">
                    <img style="max-height: 80px" src="images/dancingbanana.gif" />
                    <img style="max-height: 80px" src="images/constructioncone.jpg" />
                    <img style="max-height: 80px" src="images/dancingbanana.gif" />
                </div>
                <p><span style="font-weight: bold">Date Report Created:</span> <input type="text" id="datecreated" readonly style="border:none"></input></p>
                <p><span style="font-weight: bold">Status:</span> Inspected and Awaiting Repair</p>
                <p><span style="font-weight: bold">Severity at time of inspection:</span> <input type="text" id="severity" readonly style="border:none"></input></p>
                <p><span style="font-weight: bold">How many people have reported this pothole:</span> <input type="text" id="reportcount" readonly style="border:none"></input></p>

            </div>
            <div class="modal-footer">
                @if ((bool)ViewData["loggedIn"])
                {
                    <button type="button" onclick='marker.setMap(null), marker = null, addCount()' class="btn btn-secondary" data-dismiss="modal">Add your Report</button>
                }

                <button type="button" onclick='marker.setMap(null), marker = null' class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>




