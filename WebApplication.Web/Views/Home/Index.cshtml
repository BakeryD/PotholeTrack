@model IList<WebApplication.Web.Models.Account.Report>
@{
    ViewData["Title"] = "Home Page";
    int totalCount = 0;
    int yearCount = 0;
    int monthCount = 0;

}
@{
    if ((bool)ViewData["loggedIn"])//IF YOU ARE LOGGED IN
    {
        <script>
            $('#login').remove();
            $('#nav-register').remove();

        </script>
    }
    else//OTHERWISE
    {
        <script>
            $('#employee-btn').attr('href', '#');
            $('#employee-btn').remove('#employee-btn');
            $('#logout').remove();
        </script>
    }


}

<script type="text/javascript">
    var map;
    var marker = null;
    var infowindow;
    var messagewindow;
    var image = '/images/constructioncone.jpg';
    var lat;
    var long;
    var potholeData;


    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: 41.499252, lng: -81.694492 },
            zoom: 14,
            styles: [
                {
                    "featureType": "poi",
                    "stylers": [
                        { "visibility": "off" }
                    ]
                }
            ]
        });

        @foreach (var report in Model)
        {
            if (report.Status == 3)
            {
                totalCount++;
            }

            if (report.DateRepaired.Year.Equals(DateTime.Now.Year))
            {
                yearCount++;
            }

            if (report.DateRepaired.Year.Equals(DateTime.Now.Year) && report.DateRepaired.Month.Equals(DateTime.Now.Month))
            {
                monthCount++;
            }
        <text>
            var point = new google.maps.LatLng(
                parseFloat(@report.Lattitude),
                parseFloat(@report.Longitude));

            if (@report.Status === 2) {

                var pothole@(report.Id) = new google.maps.Marker({
                    map: map,
                    position: point
                });

                google.maps.event.addListener(pothole@(report.Id), 'click', function () {
                    $('#datecreated', $('#potholedata')).val('@report.DateCreated.ToShortDateString()');
                    $('#severity', $('#potholedata')).val('@report.Severity');
                    $('#reportcount', $('#potholedata')).val('@report.ReportCount');
                    $("#potholedata").modal();
                });
            }

        </text>
    }

        infowindow = new google.maps.InfoWindow({
            content: document.getElementById('potholereport')
        });

        messagewindow = new google.maps.InfoWindow({
            content: document.getElementById('message')
        });

        google.maps.event.addListener(map,
            'click',
            function(event) {

                if ('@((bool)ViewData["loggedIn"])' === 'True') {

                    if (marker === null) {
                        marker = new google.maps.Marker({
                            position: event.latLng,
                            map: map
                        });
                    } else {
                        marker.setPosition(event.latLng);
                    };

                    google.maps.event.addListener(marker,
                        'click',
                        function() {
                            infowindow.open(map, marker);
                            var elem = document.getElementById('potholereport');
                            elem.style.display = 'block';
                        });
                }
            });
    }


</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbeqY7Px86Yip_ibuSnWdVnScfdE2NPQA&callback=initMap"
        async defer></script>



<div id="potholereport" style="display: none">
    <p>Report a pothole here?</p>
    <input type='button' value='Save' onclick='saveData()' data-toggle="modal" data-target="#reportsaved" />
</div>



<div id="map" class="img-responsive" style="padding-top:25px"></div>

<div class="modal fade" id="reportsaved" tabindex="-1" role="dialog" aria-labelledby="Thanks!" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ReportSaved">Report Saved!</h5>
            </div>
            <div class="modal-body">
                <div style="text-align: center; padding-bottom: 10px">
                    <img style="max-height: 80px" src="images/dancingbanana.gif" />
                    <img style="max-height: 80px" src="images/constructioncone.jpg" />
                    <img style="max-height: 80px" src="images/dancingbanana.gif" />
                </div>
                <p>Thanks for your submission! A city worker will be dispatched to inspect this pothole shortly!</p>
                <p>Even though your report won't show up on the map until it has been verified, don't worry!  We're on the job!</p>
            </div>
            <div class="modal-footer">
